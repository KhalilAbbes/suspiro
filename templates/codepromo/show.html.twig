{% extends 'base_dashboard.html.twig' %}

{% block title %}Codepromo{% endblock %}

{% block body %}
<h4 class="title">Code promo</h4>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ codepromo.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ codepromo.code }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('codepromo_dashboard_index') }}">back to list</a>
<br><br>
    <form method="post" action="{{ path('codepromo_edit', {'id': codepromo.id}) }}" >
        <input type="hidden" name="_token" value="{{ csrf_token('id' ~ codepromo.id) }}">
        <button type="submit" class="btn btn-fill btn-primary btn-sm me-2">Modifier</button>
    </form>
    {{ include('codepromo/_delete_form.html.twig') }}
{% endblock %}
